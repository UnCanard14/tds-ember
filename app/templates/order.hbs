{{page-title "Order"}}

<div class="column">
  <div class="ui attached segment"><i class="user icon"></i>Client</div>
  <div class="ui attached teal segment">
    <div class="ui divided list">
      <div class="item">
        Nom : {{ @model.user.name }} <br>
        Email : {{ @model.user.email }}
      </div>
    </div>
  </div>
</div>

<div class="column">
  <div class="ui attached segment"><i class="shopping basket icon"></i>Commande</div>
  <div class="ui attached teal segment">
    <div class="ui divided list">
      <div class="item">
        Commande n° {{@model.id}} <br>
        Montant {{@model.amount}} <br>
        Nombre de produit : {{@model.count}} <br>
      </div>
    </div>
  </div>
</div>

<div class="column">
  <div class="ui attached segment"><i class="user icon"></i>A préparer</div>
  <div class="ui attached teal segment">
    <table class="ui striped table">
      <thead>
      <tr>
        <th>Section</th>
        <th>Date de Création</th>
        <th>Nom</th>
        <th>Prix</th>
        <th>Quantité</th>
        <th>Statut</th>
        <th>Etat <td><Input type="checkbox" name="first-name" class="ui checkbox" {{action 'allCheck'}}/></td></th>
      </tr>
      </thead>

      <tbody>
      {{#each @model.orderdetails as |order|}}
        <tr>
          <td>{{ order.product.section.name }}</td>
          <td>{{@model.dateCreation}}</td>
          <td>{{ order.product.name }}</td>
          <td>{{ order.product.price }}</td>
          <td>{{ order.quantity }}</td>
          <td>{{ @model.status }}</td>
          <td><Input type="checkbox" name="first-name" class="ui checkbox" {{action 'progress' order.quantity}}/></td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="column">
  <div class="ui attached segment"><i class="user icon"></i>Avancement</div>
  <div class="ui attached teal segment">
    <div class="ui divided list">
      <div class="item">
        <div class="ui progress" id="barProgress" data-value="1" data-total="9">
          <div class="bar">
            <div class="progress"></div>
          </div>
          <div class="label">Préparation commande</div>
        </div>
<!--        <LinkTo class="ui button mini" @route="section.delete" @model="">Annuler Commande</LinkTo>-->
        <LinkTo class="ui button mini" @route="board">Valider Commande</LinkTo>
      </div>
    </div>
  </div>
</div>
{{outlet}}