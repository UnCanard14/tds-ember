{{page-title "Contacts"}}
<table class="table table-striped table-dark">
  <thead>
  <tr>
    <td>Nom</td>
    <td>Pr√©nom</td>
    <td>Email</td>
  </tr>
  </thead>
  <tbody>
  {{#each @model.contacts as |contact|}}
    <tr>
      <td>{{contact.nom}}</td>
      <td>{{contact.prenom}}</td>
      <td>{{contact.email}}</td>
      <td>
        <LinkTo @route="contacts.update" @model={{ contact.id }} class="btn btn-primary btn-sm"><i class="far fa-trash_alt"></i>Modifier</LinkTo>
        <button {{action "delete" contact}}class="btn btn-primary bt-sm">Supprimer</button>
      </td>
    </tr>
  {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td>
        <LinkTo @route="contacts.add">Ajouter</LinkTo>
        {{#if @model.deletedCount}}
        <button class="btn btn-danger" {{action "cancelDeletion" @model.deleteds}}>Annuler la suppression ( {{@model.deletedCount}} )</button>
        {{/if}}
      </td>
    </tr>
  </tfoot>
</table>
{{outlet}}